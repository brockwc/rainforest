<h1>Rainforest</h1>

<h2>All Products</h2>

<%= link_to "Add New", "/products/new" %>
 
<% @products.each do |product| %>
<hr>
  <p>Product Name: <h3><%= link_to product[:name], "/products/#{product.id}" %></h3></p>
  <p>Description: <%= product[:description] %></p>
  <p>$<%= product.formatted_price %></p>
<hr>
<% end %>
