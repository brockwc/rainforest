<h1>New Product</h1>
<%= link_to "Back", products_url %>

<%= form_for @product do |f| %>
  <p>
    <%= f.label "Product Name" %>
    <%= f.text_field "name" %>
  </p>

  <p>
    <%= f.label "Description" %>
    <%= f.text_field "description" %>
  </p>

  <p>
    <%= f.label "Price" %>
    <%= f.text_field "price_in_cents" %>
  </p>

  <p>
    <%= f.submit "Add" %>
  </p>
<% end %>

