<h1>Edit a Product</h1>

<p>
  <%= link_to "Back", @product %>
</p>

<%= form_for @product do |f| %>

<p>
  <%= f.label "Product Name" %>
  <%= f.text_area "name" %>
</p>

<p>
  <%= f.label "Description" %>
  <%= f.text_area "description" %>
</p>

<p>
  <%= f.label "Price" %>
  <%= f.text_area "price_in_cents" %>
</p>

<p>
  <%= f.submit_tag "Save" %>
</p>
<% end %>